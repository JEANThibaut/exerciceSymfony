{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <h2>Les articles</h2>
    {% for article in articles %}
        <div class="card">
            <div class="card-header">
                <h3>{{article.title}}</h3>
            </div>
            <div class="card-body">
                <h5 class="card-title">{{article.title}}</h5>
                <p class="card-text">{{article.content}}</p>
                <a href="{{ path('single', {id: article.id}) }}" class="btn btn-secondary text-center">Voir l'article</a>
            </div>



        </div>

        {% endfor %}




{% endblock %}